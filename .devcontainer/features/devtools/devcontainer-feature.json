{
    "id": "devtools",
    "version": "1.0.0",
    "name": "devtools",
    "documentationURL": "",
    "description": "Installs devtools for the project.",
    "options": {
        "asdf_version": {
            "type": "string",
            "default": "latest",
            "description": "Version of asdf to install."
        },
        "taskfile_version": {
            "type": "string",
            "default": "latest",
            "description": "Version of Taskfile binary to install."
        }
    },
    "customizations": {
        "vscode": {
            "settings": {
                "github.copilot.chat.codeGeneration.instructions": [
                    {
                        "text": "This dev container has asdf and Taskfile pre-installed. Use asdf to manage runtime versions and the `task` command for automation." 
                    }
                ]
            }
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}
